<html>

   <head>
      <script type="text/javascript" src="filename.js" ></script>
   </head>
   
   <body>
      .......
   </body>
</html>


// JavaScript Variable :

<script type="text/javascript">
   
      var money;
      var name;
   
</script>


<script type="text/javascript">
   
      var money, name;
   
</script>

<script type="text/javascript">
   
      var name = "Ali";
      var money;
      money = 2000.50;
   
</script>


